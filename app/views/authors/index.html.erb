<h1>Authors</h1>
<%= link_to 'New Author', new_author_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birth date</th>
      <th>Nationality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.full_name %></td>
        <td><%= author.birth_date %></td>
        <td><%= author.nationality %></td>
        <td><%= link_to 'Show', author %></td>
      </tr>
    <% end %>
  </tbody>
</table>
